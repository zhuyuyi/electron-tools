{
    "compilerOptions": {
        // 编译输出目录
        "outDir": "./build/",
        "sourceMap": true,
        // 在表达式和声明上有隐含的any类型时报错
        "noImplicitAny": true,
        // 指定生成哪个模块系统代码
        "module": "commonjs",
        // 指定ECMAScript目标版本
        "target": "es5",
        // 支持JSX
        "jsx": "react"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}
